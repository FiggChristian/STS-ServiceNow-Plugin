{
  "name": "STS Plugin",
  "description": "Adds additional functionality to ServiceNow and other STS tools.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "webNavigation",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.service-now.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "64": "/images/icon64.png",
      "96": "/images/icon96.png",
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "64": "/images/icon64.png",
    "96": "/images/icon96.png",
    "128": "/images/icon128.png"
  }
}